<h1>Bloc Blog</h1>
<br/>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>
  <%= post.body %>
  <p>
    <%= link_to 'Edit', edit_post_path(post) %> |
    <%= link_to 'Back', posts_path %> |
    <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
  <hr>
<% end %>

<strong><%= link_to 'New Post', new_post_path %></strong>
