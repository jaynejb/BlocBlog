<html>
<p id="notice"><%= notice %></p>

<div class='row-fluid'>
<div class='span11 offset1'>
    <p><img src='http://placehold.it/1750x300'/></p>

    <h3><i class='icon-arrow-left'></i> <em><%= link_to "Return to all posts", posts_path %></em></h3>

    <div class='span8'>
    <div class='well'>  
      <section id='post'>
        <h2 class='post-title'><%= @post.title %></h2>
          <p class='post-date'><em>Posted by</em> <%= @post.user.name %> <em><%= time_ago_in_words(@post.created_at) %> ago</em> in <%= @post.category %> </p>
          <p class='post-text'><%= @post.body %></p>
    </div>
    </div>  

    <div class='span3'>
    <div class='well'> 
      <div class='btn-group'>
        <button class='btn btn-large'><i class="icon-pencil"></i> <%= link_to 'Create New Post', new_post_path %></button>
      </div>

      <h3>Recent Posts</h3>
        <p>Hello</p>
      <h3>Recent Comments</h3>
        <p>Hello</p>    
    </div>
    </div>

</div>
</div>

</section>

  <div class='row'>
  <div class='span8 offset3'>
  <div class='well'>

    <%= render 'comment' %>

  </div>
  </div>
  </div>

<h4>Admin:</h4>
  <p>
    <div class='btn-toolbar'>
    <div class='btn-group'>
      <button class='btn'><i class="icon-edit"></i> <%= link_to 'Edit', edit_post_path(@post) %></button>
      <button class='btn'><i class="icon-arrow-left"></i> <%= link_to 'Back', posts_path %></button>
      <button class='btn'><i class="icon-trash"></i> <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    </div>
    </div>  
  </p>


</html>