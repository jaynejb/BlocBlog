  <div class='field'>
    <%= f.label :name, "Username" %>
    <%= f.text_field :name %>
  </div>
  <div class='field'>
    <%= f.label :bio, "Short Bio" %>
    <%= f.text_field :bio %>
  </div>
  <div class='field'>
    <%= f.label :email, "Email Address" %>
    <%= f.text_field :email %>
  </div>
  <div class='field'>
    <%= f.label :twitter, "Twitter" %>
    <%= f.text_field :twitter %>
  </div>
  <div class='field'>
    <%= f.label :website, "Website" %>
    <%= f.text_field :website %>
  </div>
  <div class='actions'>
    <br/>
    <%= f.submit "Submit" %>
  </div>  
<% end %>

