<html>
<body style='padding: 60px;'>

  <div class='navbar navbar-inverse navbar-fixed-top'>
    <div class='navbar-inner'>
    <div class = 'container'>
      <%= link_to "Jayne Jang Belz", root_path, class: 'brand' %>
        <ul class='nav'>
          <li style='font-size: 120%'><%= link_to "Home", root_url %></li> 
          <li style='font-size: 120%'><%= link_to "Blog", posts_path %></li>
          <li style='font-size: 120%'><a href="#">About</a></li>
          <li style='font-size: 120%'><%= link_to "Users", users_path %></li>
          <li style='font-size: 120%'><%= link_to "Log In", users_path %></li>
          <li style='font-size: 120%'><%= link_to "Register", new_user_path %></li>
        </ul>
    </div>
    </div>
  </div>


<h1>Create a User Profile</h1>
<br/
<%= form_for @user do |f| %>
<br>
<p>
	<%= f.label :name, "Username" %>
	<%= f.text_field :name %>
</p>	

<p>
	<%= f.label :bio, "Short Bio" %>
	<%= f.text_field :bio %>
</p>

<p>
	<%= f.label :email, "Email Address" %>
	<%= f.text_field :email %>
</p>	

<p>
	<%= f.label :twitter, "Twitter" %>
	<%= f.text_field :twitter %>
</p>	

<p>
	<%= f.label :website, "Website" %>
	<%= f.text_field :website %>
</p>

<p>
	<%= f.submit "Submit" %>
</p>	

<% end %>

<br/>

<div class='btn-group pull-left'>
    <button class='btn btn-large'><%=link_to 'Return to all users', users_path %></button>
</div>



</body>
</html>

