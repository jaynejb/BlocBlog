<html>
<body style='padding: 60px;'>

  <div class='navbar navbar-inverse navbar-fixed-top'>
    <div class='navbar-inner'>
    <div class = 'container'>
      <a class='brand' href='#'>Jayne Jang Belz</a>
        <ul class='nav'>
          <li style='font-size: 120%'><%= link_to "Home", root_url %></li> 
          <li style='font-size: 120%'><%= link_to "Blog", posts_path %></li>
          <li style='font-size: 120%'><a href="#">About</a></li>
          <li style='font-size: 120%'><%= link_to "Users", users_path %></li>
          <li style='font-size: 120%'><%= link_to "Log In", users_path %></li>
          <li style='font-size: 120%'><%= link_to "Register", new_user_path %></li>
        </ul>
    </div>
    </div>
  </div>

<h1>Listing Users</h1>

<table class='table table-striped'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Bio</th>
    <th>Twitter</th>
    <th>Website</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= user.bio %></td>
    <td><%= user.twitter %></td>
	  <td><%= user.website %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<div class='btn-group pull-left'>
    <button class='btn btn-large'><%= link_to 'Create User Profile', new_user_path %></button>
</div>

</body>
</html>
