<html>
<body style='padding: 60px;'>

  <div class='navbar navbar-inverse navbar-fixed-top'>
    <div class='navbar-inner'>
    <div class = 'container'>
      <%= link_to "Jayne Jang Belz", root_path, class: 'brand' %>
        <ul class='nav'>
          <li style='font-size: 120%'><%= link_to "Home", root_url %></li> 	
          <li style='font-size: 120%'><%= link_to "Blog", posts_path %></li>
          <li style='font-size: 120%'><a href="#">About</a></li>
          <li style='font-size: 120%'><%= link_to "Users", users_path %></li>
          <li style='font-size: 120%'><%= link_to "Log In", users_path %></li>
          <li style='font-size: 120%'><%= link_to "Register", new_user_path %></li>
        </ul>
    </div>
    </div>
  </div>

<h1><i class="icon-user"></i> User Profile</h1>
<p><%=link_to 'Return to all users', users_path %></p>
<hr />
<h2>Basic Info</h2>
<p><strong>Name:</strong> <%= @user.name %></p>
<p><strong>Email:</strong> <%= @user.email %></p>
<p><strong>Bio:</strong> <%= @user.bio %></p>
<p><strong>Twitter:</strong> <%= @user.twitter %></p>
<p><strong>Website:</strong> <%= @user.website %></p>

<hr />
<h2>Posts by <%= @user.name %></h2>
<% @user.posts.each do |post| %>
    <p><%= link_to post.title, post_path(post) %></p>

<hr />


<% end %>

</body>
</html>